extends layout

block content
  section#loginBox.center
    form#loginForm.mainForm(name='loginForm', action='/login', method='POST')
      label(for='username') Username: 
      input#username(type='text', name='username', placeholder='username')
      label(for='pass') Password: 
      input#pass(type='password', name='pass', placeholder='password')
      br
      a#loginSubmit.formSubmit(href='#') Sign in
      br
      a(href='/signup') Sign up
  script(src='/javascripts/client.js')